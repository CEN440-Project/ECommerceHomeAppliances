<!-- Populer Products Sectıon -->
<section class="product-section pb-100">
	<div class="container">
		<div class="row">
	        <div class="col-12">
	            <div class="heading-part text-center mb-30 mb-sm-20">
	                <h2 class="main_title">Popüler Ürünler</h2>
	            </div>
	        </div>
	    </div>
	    <div class="row">
			@foreach(var item in Model.Products)
			{
				<div class="col-lg-3 col-md-4 col-6">
					<div class="product-item">
						<div class="product-image">
							<div class="new-label"><span><i class="fa-solid fa-star" style="color: yellow"></i></span></div>
							<a href="product-page.html">
								<img src="@item.ImageURL" alt="@item.ImageURL">
							</a>
						</div>
						<div class="product-details-outer">
							<div class="product-details">
								<div class="product-title">
									<a href="product-page.html">@item.Name</a>
								</div>
								<div class="price-box">
									<span class="price">₺@item.Price</span>
									<del class="price old-price">₺@(Convert.ToInt32(item.Price*1.10))</del>
								</div>
							</div>
							<div class="product-details-btn">
								<ul>
									<li class="icon cart-icon">
										<a href="cart.html">
											<span></span>
										</a>
									</li>
									<li class="icon wishlist-icon">
										<a href="wishlist.html">
											<span></span>
										</a>
									</li>
									<li class="icon compare-icon">
										<a href="javascript:void(0)">
											<span></span>
										</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			}
			
	    </div>
	    <div class="row">
	        <div class="col-12">
	            <div class="align-center">
	                <a href="shop.html" class="btn btn-color">See more Products</a>
	            </div>
	        </div>
	    </div>
	</div>
</section>

