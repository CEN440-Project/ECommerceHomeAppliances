@model UserSignInViewModel

@{

}

<div class="contant">
	<div id="banner-part" class="banner inner-banner">
		<div class="container">
			<div class="bread-crumb-main">
				<h1 class="banner-title">Giriş Yap</h1>
				<div class="breadcrumb">
					<ul class="inline">
						<li><a href="/">Ana Sayfa</a></li>
						<li>Giriş Yap</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="ptb-100">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-xl-6 col-lg-8 col-md-8 ">
					<form method="post" class="main-form full">
						<div class="row">
							<div class="col-12 mb-20">
								<div class="heading-part align-center">
									<h2 class="heading">Kullanıcı Girişi</h2>
								</div>
							</div>
							<div class="col-12">
								<div class="form-group">
									<label for="username">Kullanıcı Aı</label>
									<input id="username"  type="text"  asp-for="username" placeholder="Kullanıcı Adı">
								</div>
							</div>
							<div class="col-12">
								<div class="form-group">
									<label for="login-pass">Password</label>
									<input id="login-pass"  type="password"  asp-for="password" placeholder="Şifre">
								</div>
							</div>
							<div class="col-12">
								<div class="mb-30 dit w-100">
									<div class="check-box left-side mt-15">
										<span>
											<input type="checkbox" name="remember_me" id="remember_me" class="checkbox">
											<label for="remember_me" class="mb-0">Beni Hatırla</label>
										</span>
									</div>
									<button class="btn-color right-side">Giriş Yap</button>
								</div>
							</div>
							<div class="col-12">
								<hr>
								<div class="align-center mt-20">
									<a title="Şifremi Unuttum" class="link forgot-password mtb-20" href="#">Şifreni Mi Unuttun?</a>
								</div>
							</div>
							<div class="col-12">
								<div class="new-account align-center mt-20">
									<span>Hesabın Yok Mu?</span>
									<a class="link" title="Yeni Bir Hesap Oluştur" href="/Login/SignUp">Yeni bir hesap oluştur</a>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
