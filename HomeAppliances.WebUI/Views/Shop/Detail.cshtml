@model ProductCardItemViewModel

<!-- Product detail contant start -->
<div class="contant">
    <div id="banner-part" class="banner inner-banner">
        <div class="container">
            <div class="bread-crumb-main">
                <h1 class="banner-title">Ürün Detayı</h1>
                <div class="breadcrumb">
                    <ul class="inline">
                        <li><a href="/">Ana Sayfa</a></li>
                        <li><a href="/Shop/Index">Tüm Ürünler</a></li>
                        <li>Ürün Detayı</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="ptb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-md-6 col-12">
                    <div class="align-center mb-md-30">
                        <ul id="glasscase" class="gc-start">
                            <li><img src="@Model.Product.ImageURL" alt="Xpoge" /></li>
                            <li><img src="@Model.Product.ImageURL" alt="Xpoge" /></li>
                            <li><img src="@Model.Product.ImageURL" alt="Xpoge" /></li>
                            <li><img src="~/images/6.jpg" alt="Xpoge" /></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-7 col-md-6 col-12">
                    <div class="product-detail-main">
                        <div class="product-item-details">
                            <h1 class="product-item-name">@Model.Product.Name</h1>
                            <h4 class="product-item-name">@Model.Product.ProductCategory.Name</h4>
                            <h6 class="product-item-name">@Model.Product.Brand.Name</h6>
                            <div class="price-box">
                                <span class="price">₺@Model.Product.Price</span>
                                <del class="price old-price">₺@(Model.Product.Price * 1.2)</del>
                            </div>
                            <div class="rating-main">
                                <div class="rating-summary-block">
                                    <div title="53%" class="rating-result"> <span style="width:53%"></span> </div>
                                </div>
                                <span>1 Görüntülenme</span>
                            </div>
                            <div class="product-des">
                                <p>@Model.Product.Description</p>
                            </div>
                            <ul class="product-list">
                                <li><i class="fa fa-check"></i> Satış sonrası 7/24 canlı destek hizmeti</li>
                                <li><i class="fa fa-check"></i> ₺20.000 ve üzeri alışverişlerinizde ücretsiz kurulum imkanı</li>
                                <li><i class="fa fa-check"></i> 14 gün içerisinde iade imkanı</li>
                                <li><i class="fa fa-check"></i> 2 yıl boyunca garanti ve +1 yıl boyunca ücretsiz servis.</li>
                            </ul>
                            <hr class="mb-20">
                            <form method="post">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="table-listing qty mb-20">
                                            <div class="row">
                                                <div class="col-xl-2 col-md-3 col-sm-12">
                                                    <span>Adet:</span>
                                                </div>
                                                <div class="col-xl-10 col-md-9 col-sm-12">
                                                    <div class="custom-qty">
                                                        <button onclick="var result = document.getElementById('qty1'); var qty1 = result.value; if( !isNaN( qty1 ) &amp;&amp; qty1 > 1 ) result.value--;return false;" class="reduced items" type="button"> <i class="fa fa-minus"></i> </button>
                                                        <input type="text" class="input-text qty" title="Qty" value="1" maxlength="8" id="qty1" asp-for="CardItem.Quantity">
                                                        <button onclick="var result = document.getElementById('qty1'); var qty1 = result.value; if( !isNaN( qty1 )) result.value++;return false;" class="increase items" type="button"> <i class="fa fa-plus"></i> </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="mb-20">
                                <div class="product-details-btn">
                                    <ul>
                                        <input type="hidden" value="@Model.Product.ProductID" asp-for="CardItem.ProductId" />
                                        <input type="hidden" value="@ViewBag.cardId" asp-for="CardItem.CardId" />
                                        <li class="icon cart-icon">
                                            <button href="/Shop/Detail/@Model.Product.ProductID" class="btn btn-color"><span></span>Sepete Ekle</button>
                                        </li>

                                        <li class="icon wishlist-icon">
                                            <a href="#" class="btn btn-transparent"><span></span></a>
                                        </li>
                                        <li class="icon compare-icon">
                                            <a href="#" class="btn btn-transparent"><span></span></a>
                                        </li>
                                    </ul>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Product detail contant end -->

