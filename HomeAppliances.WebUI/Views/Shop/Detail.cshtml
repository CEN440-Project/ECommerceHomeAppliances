<!-- Related Product Section Start -->
<section class="product-section pb-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="heading-part text-center mb-30 mb-sm-20">
                    <h2 class="main_title">Son Ürünler</h2>
                </div>
            </div>
        </div>
        <div class="position-r">
            <div class="row">
                <div class="product-slider owl-carousel position-initial">
                    @foreach (var item in Model.LastProducts)
                    {
                        <div class="item">
                            <div class="product-item">
                                <div class="product-image">
                                    <div class="sale-label"><span>Yeni</span></div>
                                    <a href="product-page.html">
                                        <img src="@item.ImageURL" alt="Product">
                                    </a>
                                </div>
                                <div class="product-details-outer">
                                    <div class="product-details">
                                        <div class="product-title">
                                            <a href="product-page.html">@item.Name</a>
                                        </div>
                                        <div class="price-box">
                                            <span class="price">₺@item.Price</span>
                                            <del class="price old-price">@(item.Price * 1.2)</del>
                                        </div>
                                    </div>
                                    <div class="product-details-btn">
                                        <ul>
                                            <li class="icon cart-icon">
                                                <a href="/Shop/Detail/@item.ProductID">
                                                    <span></span>
                                                </a>
                                            </li>
                                            <li class="icon wishlist-icon">
                                                <a href="#">
                                                    <span></span>
                                                </a>
                                            </li>
                                            <li class="icon compare-icon">
                                                <a href="#">
                                                    <span></span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Related Product Section End -->
